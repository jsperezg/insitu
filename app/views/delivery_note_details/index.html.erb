<%- model_class = DeliveryNoteDetail -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:delivery_note_id) %></th>
      <th><%= model_class.human_attribute_name(:service_id) %></th>
      <th><%= model_class.human_attribute_name(:quantity) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @delivery_note_details.each do |delivery_note_detail| %>
      <tr>
        <td><%= link_to delivery_note_detail.id, delivery_note_detail_path(delivery_note_detail) %></td>
        <td><%= delivery_note_detail.delivery_note_id %></td>
        <td><%= delivery_note_detail.service_id %></td>
        <td><%= delivery_note_detail.quantity %></td>
        <td><%=l delivery_note_detail.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_delivery_note_detail_path(delivery_note_detail), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      delivery_note_detail_path(delivery_note_detail),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_delivery_note_detail_path,
            :class => 'btn btn-primary' %>
