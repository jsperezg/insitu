<%- model_class = DeliveryNote -%>
<div class="page-header">
  <h1><%=t 'delivery_notes.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th class=col-xs-1><%= model_class.human_attribute_name(:number) %></th>
      <th class=col-xs-6><%= model_class.human_attribute_name(:customer_id) %></th>
      <th class=col-xs-1><%= model_class.human_attribute_name(:date) %></th>
      <th class=col-xs-4></th>
    </tr>
  </thead>
  <tbody>
    <% @delivery_notes.each do |delivery_note| %>
      <tr>
        <td><%= link_to delivery_note.number, delivery_note_path(delivery_note) %></td>
        <td><%= delivery_note.customer_id %></td>
        <td><%= delivery_note.date %></td>
        <td>
          <%= link_to edit_user_delivery_note_path(current_user, delivery_note), class: 'btn btn-default btn-xs' do %>
            <i class="fa fa-pencil-square-o" aria-hidden="true">
              <%=t 'helpers.links.edit' %>
            </i>
          <% end %>

          <%= link_to user_delivery_note_path(current_user, delivery_note),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' do %>
            <i class="fa fa-trash-o" aria-hidden="true">
              <%=t 'helpers.links.destroy' %>
            </i>
          <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_delivery_note_path(current_user),
            :class => 'btn btn-primary' %>
