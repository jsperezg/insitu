<div class="box-body">
  <%= render partial: 'layouts/validation_errors', locals: { object: @delivery_note } %>

  <div class=row>
    <% unless @delivery_note.new_record? %>
      <div class="form-group pull-left col-xs-2">
        <%= f.label :number, :class => 'control-label' %>
        <%= input_code f %>
      </div>
    <% end %>

    <%= customer_field f, :customer_id, class: 'pull-left col-xs-8', required: true %>

    <div class="form-group pull-left col-xs-2">
      <%= f.label :date, :class => 'control-label' %>
      <div class="input-group">
        <span class="input-group-addon">
          <span class="fa fa-calendar"></span>
        </span>
        <%= f.text_field :date, class: 'form-control input-sm date', value: ldate(@delivery_note[:date]), required: true %>
      </div>
    </div>
  </div>  

  <hr>
  <table class="table table-striped" data-no-turbolink>
    <thead>
      <tr>          
        <th class=col-xs-1><%=t 'helpers.links.destroy' %></th>
        <th class=col-xs-7>
          <%=t 'activerecord.attributes.delivery_note/delivery_note_details.service_id'%>
        </th>
        <th class="col-xs-1 text-right">
          <%=t 'activerecord.attributes.delivery_note/delivery_note_details.quantity'%>
        </th>      
        <th class="col-xs-1 text-right">
          <%=t 'activerecord.attributes.delivery_note/delivery_note_details.price'%>
        </th>
        <th class="col-xs-2 text-right">
          <%=t 'activerecord.attributes.delivery_note/delivery_note_details.total'%>
        </th>
      </tr>
    </thead>
    <tbody>
      <%= f.fields_for :delivery_note_details do |builder| %>
        <%= render 'delivery_note_details', f: builder %>
      <% end %>
      <tr>
        <td colspan="100%">
          <%= f.submit t(:add_detail), :class => 'btn btn-primary btn-flat col-xs-12', data: { disable_with: t('please_wait')} %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<div class="box-footer">
  <% unless @delivery_note.new_record? %>
      <%= link_to user_delivery_note_path(current_user, @delivery_note),
                  method: :get,
                  class: 'btn btn-default btn-flat col-xs-1' do %>
          <i class="fa fa-print" aria-hidden="true">
            <%=t 'helpers.links.print' %>
          </i>
      <% end %>
  <% end %>

  <%= link_to t("helpers.links.cancel"),
            user_delivery_notes_path(current_user), :class => 'btn btn-default btn-flat col-xs-1' %>
</div>
