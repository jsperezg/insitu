<%- model_class = Unit -%>
<div class="box box-primary">
  <div class="box-body">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th class="col-xs-1"><%= model_class.human_attribute_name(:label_short) %></th>
            <th><%= model_class.human_attribute_name(:label_long) %></th>
            <th class="col-xs-1"></th>
            <th class="col-xs-1"></th>
          </tr>
        </thead>
        <tbody>
          <% if @units.empty? %>
            <tr><td colspan="4"><%=t 'helpers.tables.empty' %></td></tr>
          <% end %>
          <% @units.each do |unit| %>
            <tr>
              <td><%= best_in_place unit, :label_short, path: user_unit_path(current_user, unit, format: :json) %></td>
              <td><%= best_in_place unit, :label_long, path: user_unit_path(current_user, unit, format: :json) %></td>
              <td>
                <%= button_to edit_user_unit_path(current_user.id, unit),
                              class: 'btn btn-default btn-xs btn-flat btn-block',
                              method: :get do %>
                  <i class="fa fa-pencil-square-o" aria-hidden="true">
                    <%=t 'helpers.links.edit' %>
                  </i>
                <% end %>
              </td>
              <td>
                <%= button_to user_unit_path(current_user.id, unit),
                            :method => :delete,
                            :data => { :confirm => t('helpers.links.confirm', :default => 'Are you sure?') },
                            :class => 'btn btn-xs btn-danger btn-flat btn-block' do %>
                  <i class="fa fa-trash-o" aria-hidden="true">
                    <%=t 'helpers.links.destroy' %>
                  </i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="box-footer">
    <div class="row">
      <div class="col-xs-2">
        <%= button_to t('helpers.links.new'),
            new_user_unit_path(current_user.id),
            :class => 'btn btn-primary btn-flat btn-block',
            method: :get %>
      </div>
    </div>
  </div>
</div>
