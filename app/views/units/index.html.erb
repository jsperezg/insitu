<%- model_class = Unit -%>
<div class="box box-primary">
  <div class="box-body">
    <div class="table-responsive">
      <table class="table table-striped table-layout-fixed">
        <thead>
          <tr>
            <th class="col-lg-1 col-md-2 col-sm-3 hidden-xs"><%= model_class.human_attribute_name(:label_short) %></th>
            <th class="col-xs-9"><%= model_class.human_attribute_name(:label_long) %></th>
            <th class="col-lg-1 col-md-1 col-sm-2 col-xs-3"></th>
          </tr>
        </thead>
        <tbody>
          <% if @units.empty? %>
            <tr><td colspan="100%"><%=t 'helpers.tables.empty' %></td></tr>
          <% end %>
          <% @units.each do |unit| %>
            <% cache unit do %>
              <tr>
                <td class="hidden-xs"><%= best_in_place unit, :label_short, url: user_unit_path(current_user, unit, format: :json) %></td>
                <td>
                  <span class="hidden-xs">
                    <%= best_in_place unit, :label_long, url: user_unit_path(current_user, unit, format: :json) %>
                  </span>
                  <div class="visible-xs ellipsis">
                    <%= link_to unit.label_long, edit_user_unit_path(current_user, unit) %>
                  </div>
                </td>
                <td>
                  <div class="btn-group pull-right">
                    <button type="button" class="btn btn-primary btn-block btn-sm btn-flat dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <i class="fa fa-bars" aria-hidden="true"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-right">
                      <li>
                        <%= link_to edit_user_unit_path(current_user, unit), method: :get do %>
                          <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                          <%=t 'helpers.links.edit' %>
                        <% end %>
                      </li>
                      <li>
                        <%= link_to user_unit_path(current_user, unit),
                              :method => :delete,
                              :data => {
                                  'original-title' => t('helpers.links.confirm', :default => 'Are you sure?') ,
                                  confirm: t(:removal_confirmation, model: model_class.model_name.human.downcase, description: unit.label_long),
                                  commit: t(:continue),
                                  cancel: t(:cancel)
                              } do %>
                          <i class="fa fa-trash-o" aria-hidden="true"></i>
                          <%=t 'helpers.links.destroy' %>
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="box-footer">
    <div class="row">
      <div class="col-lg-1 col-md-2 col-sm-3 col-xs-12">
        <%= button_to t('helpers.links.new'),
            new_user_unit_path(current_user.id),
            :class => 'btn btn-primary btn-flat btn-block',
            method: :get %>
      </div>
    </div>
  </div>
</div>
