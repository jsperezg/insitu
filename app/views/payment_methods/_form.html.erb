<div class="box-body">
  <%= render partial: 'layouts/validation_errors', locals: { object: @payment_method } %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label' %>
    <%= f.text_field :name, :class => 'form-control input-sm', required: true, autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :note_for_invoice, :class => 'control-label' %>
    <%= f.text_area :note_for_invoice, :class => 'form-control input-sm ckeditor' %>
  </div>
  <div class="checkbox">
    <label>
      <%= f.check_box :default %><%= t('activerecord.attributes.payment_method.default') %>
    </label>
  </div>
</div>
<div class="box-footer">
  <%= f.submit t(:save), :class => 'btn btn-primary btn-flat col-md-1 col-sm-2 col-xs-6', data: { disable_with: t('please_wait')} %>
  <%= link_to t('helpers.links.cancel'),
          user_payment_methods_path(current_user.id), :class => 'btn btn-default btn-flat col-md-1 col-sm-2 col-xs-6' %>
</div>