<%- model_class = PaymentMethod -%>
<% cache @payment_method do %>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
  </div>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
    <dd><%= @payment_method.name %></dd>
    <dt><strong><%= model_class.human_attribute_name(:note_for_invoice) %>:</strong></dt>
    <dd><%=raw @payment_method.note_for_invoice %></dd>
  </dl>

  <%= link_to t('.back', :default => t("helpers.links.back")), user_payment_methods_path(current_user), :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_user_payment_method_path(current_user, @payment_method), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                user_payment_method_path(current_user, @payment_method),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
<% end %>