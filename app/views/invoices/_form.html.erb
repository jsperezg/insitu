<%= form_for @invoice, :html => { :class => "form-horizontal invoice" } do |f| %>

    <% if @invoice.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @invoice.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :number, :class => 'form-control' %>
    </div>
    <%= error_span(@invoice[:number]) %>
  </div>
  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :date, :class => 'form-control' %>
    </div>
    <%= error_span(@invoice[:date]) %>
  </div>
  <div class="control-group">
    <%= f.label :payment_method_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :payment_method_id, :class => 'form-control' %>
    </div>
    <%= error_span(@invoice[:payment_method_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :customer_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :customer_id, :class => 'form-control' %>
    </div>
    <%= error_span(@invoice[:customer_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :issue_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :issue_date, :class => 'form-control' %>
    </div>
    <%= error_span(@invoice[:issue_date]) %>
  </div>
  <div class="control-group">
    <%= f.label :payment_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :payment_date, :class => 'form-control' %>
    </div>
    <%= error_span(@invoice[:payment_date]) %>
  </div>
  <div class="control-group">
    <%= f.label :paid_on, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :paid_on, :class => 'form-control' %>
    </div>
    <%= error_span(@invoice[:paid_on]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            invoices_path, :class => 'btn btn-default' %>

<% end %>
