<%= form_tag csv_export_user_invoices_path(current_user) do %>
  <div id="csv-export-invoices" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><%=t :export %></h4>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="form-group col-md-6 col-sm-6 col-xs-12">
              <%= label_tag :from_date, t(:from_date), class: 'control-label' %>
              <div class="input-group date">
                <span class="input-group-addon">
                  <span class="fa fa-calendar"></span>
                </span>
                <%= date_field_tag :from_date, nil, class: 'form-control input-sm', required: true %>
              </div>
            </div>

            <div class="form-group col-md-6 col-sm-6 col-xs-12">
              <%= label_tag :to_date, t(:to_date), class: 'control-label' %>
              <div class="input-group date">
                <span class="input-group-addon">
                  <span class="fa fa-calendar"></span>
                </span>
                <%= date_field_tag :to_date, nil, class: 'form-control input-sm', required: true %>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <%= submit_tag t(:export), class: 'btn btn-primary' %>
          <button type="button" class="btn btn-default" data-dismiss="modal"><%=t :close %></button>
        </div>
      </div>
    </div>
  </div>
<% end %>