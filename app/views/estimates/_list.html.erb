<%- model_class = Estimate -%>
<div id="filterrific_results">
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
      <tr>
        <th class="col-xs-1"><%= model_class.human_attribute_name(:number) %></th>
        <th class="col-xs-1 text-center"><%= model_class.human_attribute_name(:date) %></th>
        <th><%= model_class.human_attribute_name(:customer_id) %></th>
        <th class="col-xs-2 text-center"><%= model_class.human_attribute_name(:valid_until) %></th>
        <th class="col-xs-1 text-right"><%= model_class.human_attribute_name(:total) %></th>
        <th class="col-xs-1"></th>
        <th class="col-xs-1"></th>
        <th class="col-xs-1"></th>
      </tr>
      </thead>
      <tbody>
      <% if estimates.empty? %>
          <tr><td colspan="0"><%=t 'helpers.tables.empty' %></td></tr>
      <% end %>
      <% estimates.each do |estimate| %>
          <%= estimate_tr estimate do %>
              <td><%= estimate.number %></td>
              <td class="text-center"><%=ldate estimate.date %></td>
              <td><%= estimate.customer.try(:name) %></td>
              <td class="text-center"><%=ldate estimate.valid_until %></td>
              <td class="text-right"><%= number_to_currency(estimate.total, unit: 'â‚¬', format: '%n %u') %></td>
              <td>
                <%= button_to edit_user_estimate_path(current_user, estimate),
                              method: :get,
                              class: 'btn btn-default btn-xs btn-flat btn-block' do %>
                    <i class="fa fa-pencil-square-o" aria-hidden="true">
                      <%=t 'helpers.links.edit' %>
                    </i>
                <% end %>
              </td>
              <td>
                <%= button_to user_estimate_path(current_user, estimate),
                              method: :get,
                              class: 'btn btn-default btn-xs btn-flat btn-block' do %>
                    <i class="fa fa-print" aria-hidden="true">
                      <%=t 'helpers.links.print' %>
                    </i>
                <% end %>
              </td>
              <td>
                <%= button_to user_estimate_path(current_user, estimate),
                              :method => :delete,
                              :data => { :confirm => t('helpers.links.confirm', :default => 'Are you sure?') },
                              :class => 'btn btn-xs btn-danger btn-block btn-flat' do %>
                    <i class="fa fa-trash-o" aria-hidden="true">
                      <%=t 'helpers.links.destroy' %>
                    </i>
                <% end %>
              </td>
          <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
  <%= will_paginate estimates, renderer: BootstrapPagination::Rails %>
</div>