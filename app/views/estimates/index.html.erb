<%- model_class = Estimate -%>
<div class="page-header">
  <h1><%=t 'estimates.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:number) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:customer_id) %></th>
      <th><%= model_class.human_attribute_name(:valid_until) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @estimates.each do |estimate| %>
      <tr>
        <td><%= link_to estimate.id, user_estimate_path(current_user, estimate) %></td>
        <td><%= estimate.number %></td>
        <td><%=ldate estimate.date %></td>
        <td><%= estimate.customer.try(:name) %></td>
        <td><%=ldate estimate.valid_until %></td>
        <td>
          <%= link_to t('.edit', :default => t('helpers.links.edit')),
                      edit_user_estimate_path(current_user, estimate), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_estimate_path(current_user, estimate),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t('helpers.links.confirm', :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_estimate_path(current_user),
            :class => 'btn btn-default' %>
