<% if @service.errors.any? %>
  <div id="error_expl" class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title"><%=t :validation_error_header %></h3>
    </div>
    <div class="panel-body">
      <ul>
      <% @service.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class="form-group">
  <%= f.label :code, t('services.code'), :class => 'control-label' %>
  <%= f.text_field :code, :class => 'form-control input-sm', required: true %>
</div>

<div class="form-group">
  <%= f.label :description, t('services.description'), :class => 'control-label' %>
  <%= f.text_field :description, :class => 'form-control input-sm', required: true %>
</div>
<div class=row>
  <div class="form-group col-xs-4 pull-left">
    <%= f.label :vat_id, t('services.vat'), :class => 'control-label' %>
    <%= f.collection_select :vat_id, Vat.order(rate: :asc), :id, :label,
      { prompt: true },
      { class: 'form-control input-sm', required: true } %>
  </div>

  <div class="form-group col-xs-4 pull-left">
    <%= f.label :unit_id, t('services.unit'), :class => 'control-label' %>
    <%= f.collection_select :unit_id, Unit.order(label_long: :asc), :id, :label_long,
      { prompt: true },
      { class: 'form-control input-sm', required: true } %>
  </div>

  <div class="form-group col-xs-4 pull-left">
    <%= f.label :price, t('services.price'), :class => 'control-label' %>
    <%= f.text_field :price, :class => 'form-control input-sm', required: true %>
  </div>
</div>

<%= f.submit t(:save), :class => 'btn btn-primary', data: { disable_with: t('please_wait')} %>
<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
          user_services_path(current_user.id), :class => 'btn btn-default' %>
