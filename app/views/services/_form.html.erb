<div class="box-body">
  <%= render partial: 'layouts/validation_errors', locals: { object: @service } %>

  <div class="row">
    <div class="form-group col-xs-4 col-sm-3 col-md-2">
      <%= f.label :code, :class => 'control-label' %>
      <%= f.text_field :code, :class => 'form-control input-sm', required: true, autofocus: true %>
    </div>

    <div class="form-group col-xs-8 col-sm-9 col-md-10">
      <%= f.label :description, :class => 'control-label' %>
      <%= f.text_field :description, :class => 'form-control input-sm', required: true %>
    </div>
  </div>
  <div class=row>
    <div class="form-group col-xs-4 col-sm-3 col-md-1">
      <%= f.label :vat_id, :class => 'control-label' %>
      <%= f.collection_select :vat_id, Vat.order(rate: :asc), :id, :label,
        { prompt: true },
        { class: 'form-control input-sm', required: true } %>
    </div>

    <div class="form-group col-xs-4 col-sm-3 col-md-1">
      <%= f.label :unit_id, :class => 'control-label' %>
      <%= f.collection_select :unit_id, Unit.order(label_long: :asc), :id, :label_long,
        { prompt: true },
        { class: 'form-control input-sm', required: true } %>
    </div>

    <div class="form-group col-xs-4 col-sm-3 col-md-1">
      <%= f.label :price, :class => 'control-label' %>
      <div class="input-group">
        <%= f.text_field :price, :class => 'form-control input-sm', required: true %>
        <span class="input-group-addon">â‚¬</span>
      </div>
    </div>
  </div>
  <div class="checkbox">
    <%= f.label :active, :class => 'control-label' do %>
        <%= f.check_box :active %>
        <%= Service.human_attribute_name(:active) %>
    <% end %>
  </div>
</div>
<div class="box-footer">
  <%= f.submit t(:save), :class => 'btn btn-primary btn-flat col-md-1 col-sm-2 col-xs-3', data: { disable_with: t('please_wait')} %>
  <%= link_to t('helpers.links.cancel'),
          user_services_path(current_user.id), :class => 'btn btn-default btn-flat col-md-1 col-sm-2 col-xs-3' %>
</div>
