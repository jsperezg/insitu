<%- model_class = Service -%>
<% cache @service do %>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
  </div>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
    <dd><%= @service.code %></dd>
    <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
    <dd><%= @service.description %></dd>
    <dt><strong><%= model_class.human_attribute_name(:vat_id) %>:</strong></dt>
    <dd><%= @service.vat_id %></dd>
    <dt><strong><%= model_class.human_attribute_name(:unit_id) %>:</strong></dt>
    <dd><%= @service.unit_id %></dd>
    <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
    <dd><%= @service.price %></dd>
  </dl>

  <%= link_to t('.back', :default => t("helpers.links.back")),
                user_services_path(current_user), :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_user_service_path(current_user, @service), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                user_service_path(current_user, @service),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
<% end %>
