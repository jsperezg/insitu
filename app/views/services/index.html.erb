<%- model_class = Service -%>
<div class="page-header">
  <h1><%=t 'services.title' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:code) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:vat) %></th>
      <th><%= model_class.human_attribute_name(:unit) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= link_to service.id, edit_user_service_path(current_user.id, service) %></td>
        <td><%= best_in_place service, :code, path: user_service_path(current_user, service, format: :json) %></td>
        <td><%= best_in_place service, :description, path: user_service_path(current_user, service, format: :json) %></td>
        <td><%= service.vat.rate %> %</td>
        <td><%= service.unit.label_short %></td>
        <td><%= best_in_place service, :price, path: user_service_path(current_user, service, format: :json) %></td>
        <td class=text-right>
          <%= link_to edit_user_service_path(current_user.id, service), :class => 'btn btn-default btn-xs' do %>
            <i class="fa fa-pencil-square-o" aria-hidden="true">
              <%=t 'helpers.links.edit' %>
            </i>
          <% end %>
          <%= link_to user_service_path(current_user.id, service),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' do %>
            <i class="fa fa-trash-o" aria-hidden="true">
              <%=t 'helpers.links.destroy' %>
            </i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_service_path(current_user.id),
            :class => 'btn btn-default' %>
