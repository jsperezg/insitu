<div class="page-header">
  <h1><%=t :sign_up %></h1>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email,  t(:email) %>
    <%= f.email_field :email, autofocus: true, class:'form-control', placeholder: t(:fill_email) %>
  </div>

  <div class="form-group">
    <%= f.label :password, t(:password) %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>

    <% if @minimum_password_length %>
    <p class="help-block"><%= t(:minimum_length, len: @minimum_password_length) %><p class="help-block">
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, t(:passsword_confirmation) %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit t(:sign_up), class: 'btn btn-default', data: { disable_with: t('please_wait')} %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
