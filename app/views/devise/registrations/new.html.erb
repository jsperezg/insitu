<div class="login-box">
  <div class="login-logo">
    <a href="http://www.insitu.tools" target="_blank"><b>In Situ</b></a>
  </div><!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg"><%=t :sign_up %></p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email,  t(:email) %>
        <%= f.email_field :email, autofocus: true, class:'form-control', placeholder: t(:fill_email) %>
      </div>

      <div class="form-group">
        <%= f.label :password, t(:password) %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>

        <% if @minimum_password_length %>
        <p class="help-block"><%= t(:minimum_length, len: @minimum_password_length) %><p class="help-block">
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, t(:passsword_confirmation) %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit t(:sign_up), class: 'btn btn-primary btn-block btn-flat', data: { disable_with: t('please_wait')} %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div><!-- /.login-box-body -->
</div><