<%- if devise_mapping.omniauthable? %>
  <div class="social-auth-links text-center">
    <%= link_to omniauth_authorize_path(resource_name, :google_oauth2), class:'btn btn-block btn-social btn-google btn-flat' do %>
        <i class="fa fa-google-plus"></i> <%= t :sign_in_using %> Google+
    <% end %>
  </div>
<% end -%>

<div class="list-group">
<%- if controller_name != 'sessions' %>
  <%= link_to t(:log_in), new_session_path(resource_name), class:'list-group-item list-group-item-info' %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t(:sign_up), new_registration_path(resource_name), class:'list-group-item list-group-item-info' %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t(:forgot_password), new_password_path(resource_name), class:'list-group-item list-group-item-info' %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t(:didnt_received_confirmation_instructions), new_confirmation_path(resource_name), class:'list-group-item list-group-item-info' %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t(:didnt_received_unlock_instructions), new_unlock_path(resource_name), class:'list-group-item list-group-item-info' %>
<% end -%>
</div>
