<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="panel panel-default col-xs-12 col-lg-4 col-lg-offset-4" style="margin-top: 25px">
      <div class="panel-body">
        <div class="row">
          <h2><%=t :forgot_password %></h2>
        </div>
        <%= devise_error_messages! %>
        <div class="row">
          <div class="form-group has-feedback">
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('activerecord.attributes.user.email') %>
            <span class="fa fa-envelope form-control-feedback"></span>
          </div>
        </div>


        <div class="row">
          <%= f.submit t(:send_me_reset_password_instructions), class: 'btn btn-primary col-xs-12', data: { disable_with: t('please_wait')} %>
        </div>

        <div class="row" style="margin-top: 5px;">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
<% end %>