<div class="box-body">
  <%= render partial: 'layouts/validation_errors', locals: { object: @project } %>

  <div class=row>
    <div class="form-group col-xs-12 col-md-6 col-sm-6">
      <%= f.label :name, :class => 'control-label' %>
      <%= f.text_field :name, :class => 'form-control input-sm', required: true, autofocus: true %>
    </div>

    <%= customer_field f, :customer_id, class: 'col-xs-12 col-md-5 col-sm-4', required: true %>

    <div class="form-group col-xs-6 col-md-1 col-sm-2">
      <%= f.label :project_status_id, :class => 'control-label' %>
      <%= f.collection_select :project_status_id, ProjectStatus.order(name: :asc), :id, :locale_name,
        { prompt: true }, { class: 'form-control input-sm', required: true } %>
    </div>
  </div>
</div>
<div class="box-footer">
  <%= f.submit t(:save), :class => 'btn btn-primary btn-flat col-md-1 col-sm-2 col-xs-6', data: { disable_with: t('please_wait')} %>
  <%= link_to t("helpers.links.cancel"),
            user_projects_path(current_user), :class => 'btn btn-default btn-flat col-md-1 col-sm-2 col-xs-6' %>
</div>