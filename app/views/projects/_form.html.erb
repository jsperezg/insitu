  <% if @project.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%=t :validation_error_header %></h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @project.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control', required: true %>
    </div>
    <%= error_span(@project[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :project_status_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :project_status_id, ProjectStatus.order(name: :asc), :id, :name ,prompt: true, class: 'form-control', required: true %>
    </div>
    <%= error_span(@project[:project_status_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :customer_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :customer_id, Customer.order(name: :asc), :id, :name ,prompt: true, class: 'form-control', required: true %>
    </div>
    <%= error_span(@project[:customer_id]) %>
  </div>
  <br>

  <%= f.submit t(:save), :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            user_projects_path(current_user), :class => 'btn btn-default' %>
