<% if @vat.errors.any? %>
  <div id="error_expl" class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title"><%=t :validation_error_header %></h3>
    </div>
    <div class="panel-body">
      <ul>
      <% @vat.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class="form-group">
  <%= f.label :label, :class => 'control-label' %>
  <%= f.text_field :label, :class => 'form-control input-sm', required: true %>
</div>

<div class="form-group">
  <%= f.label :rate, :class => 'control-label' %>
  <%= f.text_field :rate, :class => 'form-control input-sm' %>
</div>

<%= f.submit t(:save), :class => 'btn btn-primary', data: { disable_with: t('please_wait')} %>
<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
          user_vats_path(current_user.id), :class => 'btn btn-default' %>
