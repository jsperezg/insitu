<%- model_class = Task -%>
<div class="page-header">
  <h1><%=t 'tasks.edit_title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human.titleize %></h1>
</div>

<%= form_for @task, url: user_task_path(current_user, @task), :html => { :class => "form-horizontal task" } do |f| %>
  <%= render :partial => 'form',  locals: { f: f } %>
<% end %>
