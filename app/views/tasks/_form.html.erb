<%- model_class = Task -%>
<div class="box-body">
  <% if @task.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%=t :validation_error_header %></h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <%= f.hidden_field :project_id %>

  <div class="row">
    <div class="form-group col-xs-8">
      <%= f.label :name, :class => 'control-label' %>
      <%= f.text_field :name, :class => 'form-control input-sm', required: true, autofocus: true %>
    </div>
    <div class="form-group col-xs-2">
      <%= f.label :priority, class: 'control-label' %>
      <%= f.select :priority, options_for_select(1..5, @task.priority), { prompt: false }, { class: 'form-control input-sm', required: true } %>
    </div>

    <div class="form-group col-xs-2">
      <%= f.label :dead_line, class: 'control-label' %>
      <div class="input-group date">
        <input type=text id=task_dead_line name="task[dead_line]" class="form-control input-sm" value="<%=ldate @task.dead_line %>">

        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: 'control-label' %>
    <%= f.text_area :description, class: 'form-control input-sm' %>
  </div>

  <div class="row">
    <div class="form-group col-xs-2">
      <div class="checkbox">
        <label>
          <%= f.check_box :finished %> <%= model_class.human_attribute_name(:finished) %>
        </label>
      </div>
    </div>

    <div class="form-group col-xs-2">
      <%= f.label :finish_date, class: 'control-label' %>
      <div class="input-group date">
        <input type=text id=task_finish_date name="task[finish_date]" class="form-control input-sm" value="<%=ldate @task.finish_date %>">

        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
  </div>

</div>
<div class="box-footer">
  <%= f.submit t(:save), :class => 'btn btn-primary btn-flat', data: { disable_with: t('please_wait')} %>
  <%= link_to t("helpers.links.cancel"),
            user_project_tasks_path(current_user, @project), :class => 'btn btn-default btn-flat' %>
</div>