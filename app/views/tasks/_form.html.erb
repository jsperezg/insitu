  <%- model_class = Task -%>
  <% if @task.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%=t :validation_error_header %></h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <%= f.hidden_field :project_id %>

  <div class="form-group">
    <%= f.label :description, :class => 'control-label' %>
    <%= f.text_field :description, :class => 'form-control input-sm', required: true %>
  </div>

  <div class="form-group">
    <div class="checkbox">
      <label>
        <%= f.check_box :finished %> <%= model_class.human_attribute_name(:finished) %>
      </label>
    </div>
  </div>

  <%= f.submit t(:save), :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            user_project_tasks_path(current_user, @project), :class => 'btn btn-default' %>
