<%= render partial: 'layouts/validation_errors', locals: { object: @customer } %>

<div class=row>
  <div class="form-group col-xs-6 col-md-2 col-sm-2">
    <%= f.label :tax_id, :class => 'control-label' %>
    <%= f.text_field :tax_id, :class => 'form-control input-sm', autofocus: true %>
  </div>

  <div class="form-group col-xs-12 col-md-10 col-sm-10">
    <%= f.label :name, :class => 'control-label' %>
    <%= f.text_field :name, :class => 'form-control input-sm', required: true %>
  </div>
</div>

<div class=row>
  <div class="form-group col-xs-6 col-md-2 col-sm-4">
    <%= f.label :billing_serie, :class => 'control-label' %>
    <%= f.text_field :billing_serie, :class => 'form-control input-sm' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :contact_name, :class => 'control-label' %>
  <%= f.text_field :contact_name, :class => 'form-control input-sm' %>
</div>

<div class=row>
  <div class="form-group col-xs-6 col-md-2 col-sm-2">
    <%= f.label :contact_phone, :class => 'control-label' %>
    <%= f.text_field :contact_phone, :class => 'form-control input-sm' %>
  </div>
  <div class="form-group col-xs-12 col-md-5 col-sm-5">
    <%= f.label :contact_email, :class => 'control-label' %>
    <div class="input-group">
      <span class="input-group-addon">@</span>
      <%= f.text_field :contact_email, :class => 'form-control input-sm' %>
    </div>
  </div>

  <div class="form-group col-xs-12 col-md-5 col-sm-5">
    <%= f.label :send_invoices_to, :class => 'control-label' %>
    <div class="input-group">
      <span class="input-group-addon">@</span>
      <%= f.text_field :send_invoices_to, :class => 'form-control input-sm' %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :address, class: 'control-label' %>
  <%= f.text_field :address, class: 'form-control input-sm' %>
</div>

<div class=row>
  <div class="form-group pull-left col-xs-12 col-md-6 col-sm-5">
    <%= f.label :city, class: 'control-label' %>
    <%= f.text_field :city, class: 'form-control input-sm' %>
  </div>

  <div class="form-group pull-left col-xs-5 col-md-2 col-sm-2">
    <%= f.label :postal_code, class: 'control-label' %>
    <%= f.text_field :postal_code, class: 'form-control input-sm' %>
  </div>

  <div class="form-group pull-left col-xs-7 col-md-2 col-sm-2">
    <%= f.label :state, class: 'control-label' %>
    <%= f.text_field :state, class: 'form-control input-sm' %>
  </div>

  <div class="form-group pull-left col-xs-6 col-md-2 col-sm-3">
    <%= f.label :country, class: 'control-label' %>
    <%= f.country_select :country, { priority_countries: [ 'ES' ], include_blank: true }, { class: 'form-control input-sm' } %>
  </div>
</div>

<%= render partial: 'customers/form_es', locals: { f: f } %>