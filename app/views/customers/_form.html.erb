

  <% if @customer.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%=t :validation_error_header %></h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @customer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control', required: true %>
    </div>
    <%= error_span(@customer[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :tax_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tax_id, :class => 'form-control' %>
    </div>
    <%= error_span(@customer[:tax_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :billing_serie, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :billing_serie, :class => 'form-control' %>
    </div>
    <%= error_span(@customer[:billing_serie]) %>
  </div>
  <div class="control-group">
    <%= f.label :billing_tax, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :billing_tax, :class => 'form-control' %>
    </div>
    <%= error_span(@customer[:billing_tax]) %>
  </div>
  <div class="control-group">
    <%= f.label :contact_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :contact_name, :class => 'form-control' %>
    </div>
    <%= error_span(@customer[:contact_name]) %>
  </div>
  <div class="control-group">
    <%= f.label :contact_phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :contact_phone, :class => 'form-control' %>
    </div>
    <%= error_span(@customer[:contact_phone]) %>
  </div>
  <div class="control-group">
    <%= f.label :contact_email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :contact_email, :class => 'form-control' %>
    </div>
    <%= error_span(@customer[:contact_email]) %>
  </div>
  <br>
  <%= f.submit t(:save), :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            user_customers_path(current_user), :class => 'btn btn-default' %>
