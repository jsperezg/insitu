<%- model_class = Customer -%>
<div id="filterrific_results">
  <div class="table-responsive">
    <table class="table table-striped table-layout-fixed">
      <thead>
      <tr>
        <th class="col-xs-9 col-md-3">
          <%= filterrific_sorting_link(@filterrific, :name, label: model_class.human_attribute_name(:name)) %>
        </th>
        <th class="hidden-xs hidden-sm col-md-3">
          <%= filterrific_sorting_link(@filterrific, 'contact name', label: model_class.human_attribute_name(:contact_name)) %>
        </th>
        <th class="hidden-xs col-md-1">
          <%= filterrific_sorting_link(@filterrific, 'contact phone', label: model_class.human_attribute_name(:contact_phone)) %>
        </th>
        <th class="hidden-xs col-md-3">
          <%= filterrific_sorting_link(@filterrific, 'contact email', label: model_class.human_attribute_name(:contact_email)) %>
        </th>
        <th class="col-md-1 col-sm-2 hidden-xs"></th>
        <th class="col-md-1 col-sm-2- col-xs-3"></th>
      </tr>
      </thead>
      <tbody>
      <% if customers.empty? %>
          <tr><td colspan="100%"><%=t 'helpers.tables.empty' %></td></tr>
      <% end %>
      <% customers.each do |customer| %>
        <% cache customer do %>
          <tr>
            <td>
              <span class="hidden-xs">
                <%= best_in_place customer, :name, url: user_customer_path(current_user, customer, format: :json) %>
              </span>

              <div class="visible-xs ellipsis">
                <%= link_to customer.name, edit_user_customer_path(current_user, customer) %>
              </div>
            </td>
            <td class="hidden-xs hidden-sm"><%= best_in_place customer, :contact_name, url: user_customer_path(current_user, customer, format: :json) %></td>
            <td class="hidden-xs"><%= best_in_place customer, :contact_phone, url: user_customer_path(current_user, customer, format: :json) %></td>
            <td class="hidden-xs"><%= best_in_place customer, :contact_email, url: user_customer_path(current_user, customer, format: :json) %></td>
            <td class="hidden-xs">

            </td>
            <td>
              <div class="btn-group pull-right">
                <button type="button" class="btn btn-primary btn-block btn-sm btn-flat dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <i class="fa fa-bars" aria-hidden="true"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-right">
                  <li>
                    <%= link_to edit_user_customer_path(current_user, customer), method: :get do %>
                      <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                      <%=t 'helpers.links.edit' %>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to user_customer_path(current_user, customer),
                            :method => :delete,
                            :data => {
                                'original-title' => t('helpers.links.confirm', :default => 'Are you sure?'),
                                confirm: t(:removal_confirmation, model: model_class.model_name.human.downcase, description: customer.name),
                                commit: t(:continue),
                                cancel: t(:cancel)
                            }  do %>
                      <i class="fa fa-trash-o" aria-hidden="true"></i>
                      <%=t 'helpers.links.destroy' %>
                    <% end %>
                  </li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
  <%= will_paginate customers, renderer: BootstrapPagination::Rails,
                    class: 'pagination pagination-sm',
                    next_label: '<i class="fa fa-step-forward" aria-hidden="true"></i>',
                    previous_label: '<i class="fa fa-step-backward" aria-hidden="true"></i>' %>
</div>