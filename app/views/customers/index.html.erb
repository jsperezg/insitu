<%- model_class = Customer -%>
<div class="box box-primary">
  <div class="box-body">
    <%= form_for_filterrific @filterrific do |f| %>
        <div class="row">
          <div class="form-group col-xs-6">
            <%= f.label :with_filter_criteria,
                        "#{model_class.human_attribute_name(:name)}/#{model_class.human_attribute_name(:contact_name)}/#{model_class.human_attribute_name(:contact_email)}",
                        class: 'control-label' %>
            <%= f.text_field :with_filter_criteria, class: 'filterrific-periodically-observed form-control input-sm' %>
          </div>

          <div class="form-group col-xs-2">
            <%= f.label :sorted_by, t('filterrific.sorted_by'), :class => 'control-label' %>
            <%= f.select :sorted_by, @filterrific.select_options[:sorted_by], {}, { class: 'form-control input-sm' } %>
          </div>

          <%= link_to t('filterrific.reset_filters'), reset_filterrific_url, class: 'btn btn-default pull-down' %>

          <%# add an automated spinner to your form when the list is refreshed %>
          <%= render_filterrific_spinner %>
        </div>
    <% end %>

    <%= render partial: 'list', locals: { customers: @customers } %>
  </div>
  <div class="box-footer">
    <%= button_to t('helpers.links.new'),
        new_user_customer_path(current_user),
        class: 'btn btn-primary btn-block btn-flat',
        method: :get%>
  </div>
</div>
