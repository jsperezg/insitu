<%- model_class = Customer -%>
<div class="box box-primary">
  <div class="box-body">
    <%= form_for_filterrific @filterrific do |f| %>
        <div class="row">
          <div class="form-group col-xs-5 col-sm-6 col-md-8">
            <%= f.label :with_filter_criteria,
                        "#{model_class.human_attribute_name(:name)}",
                        class: 'control-label' %>
            <%= f.text_field :with_filter_criteria, class: 'filterrific-periodically-observed form-control input-sm' %>
          </div>

          <div class="form-group col-xs-4 col-sm-3 col-md-2">
            <%= f.label :sorted_by, t('filterrific.sorted_by'), :class => 'control-label' %>
            <%= f.select :sorted_by, @filterrific.select_options[:sorted_by], {}, { class: 'form-control input-sm' } %>
          </div>

          <%= link_to t('filterrific.reset_filters'), reset_filterrific_url, class: 'btn btn-default pull-down col-xs-2 col-sm-2 col-md-1' %>

          <%# add an automated spinner to your form when the list is refreshed %>
          <%= render_filterrific_spinner %>
        </div>
    <% end %>

    <%= render partial: 'list', locals: { customers: @customers } %>
  </div>
  <div class="box-footer">
    <div class="row">
      <div class="col-md-1 col-sm-2 col-xs-3">
        <%= button_to t('helpers.links.new'),
            new_user_customer_path(current_user),
            class: 'btn btn-primary btn-block btn-flat',
            method: :get%>
      </div>
    </div>
  </div>
</div>
