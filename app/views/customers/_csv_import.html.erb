<%= form_tag csv_import_user_customers_url(current_user), multipart: true do %>
  <div id="csv-import-customers" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><%=t :csv_import %></h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="csv_file" class=control-label><%=t :select_csv_file %></label>
            <input type="file" name="csv_file" id=csv_file class=filestyle required
                   data-buttonText="<%=t :open %>"
                   data-icon="false">
            <p class="help-block">
              <%=t :csv_import_help %>
            </p>
          </div>
        </div>
        <div class="modal-footer">
          <%= link_to csv_template_user_customers_path(current_user), data: { turbolinks: false }, class: 'btn btn-default pull-left' do %>
              <i class="fa fa-file-excel-o" aria-hidden="true"></i>
              <%=t :template_file %>
          <% end %>

          <%= submit_tag t(:import), class: 'btn btn-primary', data: { disable_with:  t(:please_wait) } %>
          <button type="button" class="btn btn-default" data-dismiss="modal"><%=t :cancel %></button>
        </div>
      </div>
    </div>
  </div>
<% end %>